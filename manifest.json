{
	"manifest_version": 3,
	"name": "VerifyAll",
	"version": "0.0.1",
	"short_name": "VerifyAll",
	"description": "Mark everyone on Twitter verified, because it's just as useful",
	"icons": {
		"128": "res/icon.png"
	},
	"minimum_chrome_version": "36.0",
    "content_scripts": [{
        "matches": ["https://twitter.com/*"],
        "css": ["inject.css"],
        "js": ["inject.js"],
        "run_at": "document_end"
    }],
	"permissions": [
		"storage"
	]
}
